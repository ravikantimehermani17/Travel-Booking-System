# Travel Ease Application - Environment Configuration
# Copy this file to .env and update the values for your environment

# ================================
# SERVER CONFIGURATION
# ================================
NODE_ENV=production
PORT=4000

# For Linux deployment, you might want to use a different port
# PORT=8080

# ================================
# MONGODB CONFIGURATION
# ================================
# Local MongoDB (default)
MONGODB_URI=mongodb://localhost:27017/travelEas

# For remote MongoDB (replace with your connection string)
# MONGODB_URI=mongodb://username:password@hostname:27017/travelEas

# For MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/travelEas?retryWrites=true&w=majority

# ================================
# SECURITY CONFIGURATION
# ================================
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ================================
# FRONTEND CONFIGURATION
# ================================
# Local development
FRONTEND_URL=http://localhost:4000

# For Linux server deployment (update with your server IP/domain)
# FRONTEND_URL=http://your-server-ip:4000
# FRONTEND_URL=http://your-domain.com

# ================================
# CORS CONFIGURATION
# ================================
# Allow multiple origins (comma-separated)
# CORS_ORIGINS=http://localhost:4000,http://127.0.0.1:4000,http://your-server-ip:4000

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# LOGGING
# ================================
LOG_LEVEL=info

# ================================
# LINUX SPECIFIC SETTINGS
# ================================
# Set to true if running on Linux server
LINUX_DEPLOYMENT=true

# Process management
PM2_INSTANCES=2

# ===========================================
# TRAVELEAS APPLICATION ENVIRONMENT CONFIG
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=4000
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string
# For local development: mongodb://localhost:27017/travelEas
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/travelEas
MONGODB_URI=mongodb://localhost:27017/travelEas

# ===========================================
# SECURITY CONFIGURATION  
# ===========================================
# Session secret key - CHANGE THIS IN PRODUCTION!
# Generate a strong random key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-super-secret-session-key-here-change-in-production

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Frontend URL for CORS policy
# For development: http://localhost:3000 or http://localhost:4000
# For production: http://yourdomain.com (FORCE HTTP-ONLY)
FRONTEND_URL=http://localhost:4000

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
# API rate limit (requests per window)
API_RATE_LIMIT=100
# Auth rate limit (login/register attempts per window)
AUTH_RATE_LIMIT=5
# Rate limit window in minutes
RATE_LIMIT_WINDOW=15

# ===========================================
# DEVELOPMENT/DEBUG CONFIGURATION
# ===========================================
# Enable debug mode
DEBUG=traveleas:*
# Enable API debugging
API_DEBUG=false
# Database query logging
DB_DEBUG=false

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# These variables should be set in production environment
# Do not set these in development!

# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/traveleas
# NODE_ENV=production
# SESSION_SECRET=super-long-random-production-secret-key
# FRONTEND_URL=http://yourdomain.com
